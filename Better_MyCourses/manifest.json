{
	//Better MyCourses
	"manifest_version": 2,
	"name": "Better MyCourses",
	"version": "0.0.1",
	"description": "A tool for improving your RIT MyCourses experience.",
	"icons": {
		"16": "icon16.png",
		"48": "icon48.png",
		"128": "icon128.png"
	},
	"permissions": [
		"tabs",
		"activeTab",
		"https://mycourses.rit.edu/*"
	],
	"content_scripts": [
		{
			"matches": [
				"https://mycourses.rit.edu/*"
			],
			"css": [
				"css/dark-theme/main.css"
			]
		},
		{
			"matches": [
				"https://mycourses.rit.edu/d2l/loginh/*"
			],
			"css": [
				"css/dark-theme/login.css"
			]
		}
	],
	"browser_action": {
		"default_popup": "html/popup.html"
	}
}