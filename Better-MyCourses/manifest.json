{
	"manifest_version": 2,
	"name": "Better myCourses",
	"version": "0.0.1",
	"description": "A tool for improving your RIT myCourses experience.",
	"icons": {
		"16": "./img/icon/icon16.png",
		"48": "./img/icon/icon48.png",
		"128": "./img/icon/icon128.png"
	},
	"options_page": "../html/options.html",
	"permissions": [
		"storage",
		"https://mycourses.rit.edu/*",
		"https://start.rit.edu/*",
		"https://shibboleth.main.ad.rit.edu/*",
		"webNavigation",
		"tabs"
	],
	"short_name": "B-myCourses",
	"content_scripts": [
		{
			"matches": [
				"https://mycourses.rit.edu/*"
			],
			"js": [
				"js/css-change.js"
			],
			"run_at": "document_end",
			"css": [
				"css/main.css"
			]
		},
		{
			"matches": [
				"https://mycourses.rit.edu/d2l/loginh/*"
			],
			"css": [
				"css/login.css"
			]
		},
		{
			"matches": [
				"https://api-3d4a13e1.duosecurity.com/*"
			],
			"js": [
				"js/automatic_duo.js"
			],
			"all_frames": true,
			"run_at": "document_idle"
		},
		{
			"matches": [
				"https://mycourses.rit.edu/d2l/home"
			],
			"js": [
				"js/duo_after.js"
			]
		},
		{
			"matches": [
				"https://start.rit.edu/Duo/*/createOfflineCodes.view"
			],
			"js": [
				"js/passcode_duo.js"
			]
		}
	],
	"background": {
		"scripts": [
			"js/duo_background.js"
		],
		"persistent": false
	},
	"browser_action": {
		"default_popup": "html/popup.html"
	}
}