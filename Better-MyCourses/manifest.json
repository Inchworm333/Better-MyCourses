{
	"manifest_version": 2,
	"name": "Better myCourses",
	"version": "0.0.1",
	"description": "A tool for improving your RIT myCourses experience.",
	"icons": {
		"16": "icon16.png",
		"48": "icon48.png",
		"128": "icon128.png"
	},
	"options_page": "../html/options.html",
	"permissions": [
		"storage",
		"https://mycourses.rit.edu/*",
		"declarativeContent",
		"webNavigation"
	],
	"optional_permissions": [
		"cookies",
		"https://shibboleth.main.ad.rit.edu/*"
	],
	"content_scripts": [
		{
			"matches": [
				"https://mycourses.rit.edu/*"
			],
			"css": [
				"css/dark-theme/main.css"
			]
		},
		{
			"matches": [
				"https://mycourses.rit.edu/d2l/loginh/*"
			],
			"css": [
				"css/dark-theme/login.css"
			]
		}
	],
	"background": {
		"scripts": [
			"js/background.js",
			"js/no-login.js"
		],
		"persistent": false
	},
	"browser_action": {
		"default_popup": "html/popup.html"
	}
}